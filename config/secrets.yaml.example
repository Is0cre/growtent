# Grow Tent Automation - Secrets Configuration
# Copy this file to secrets.yaml and fill in your actual values
# IMPORTANT: secrets.yaml should NEVER be committed to git!

# Telegram Bot Configuration
telegram:
  bot_token: "YOUR_TELEGRAM_BOT_TOKEN"  # Get from @BotFather
  chat_id: "YOUR_CHAT_ID"  # Your personal or group chat ID

# OpenAI API Configuration (for plant health analysis)
openai:
  api_key: "YOUR_OPENAI_API_KEY"  # Get from platform.openai.com
  model: "gpt-4o"  # Vision-capable model

# External Server Configuration (for data sync)
external_server:
  enabled: false
  url: "https://your-server.com/api"  # Base URL for external API
  auth_type: "api_key"  # Options: "api_key", "bearer", "basic", "none"
  api_key: "YOUR_EXTERNAL_API_KEY"  # Used if auth_type is "api_key"
  bearer_token: "YOUR_BEARER_TOKEN"  # Used if auth_type is "bearer"
  basic_username: ""  # Used if auth_type is "basic"
  basic_password: ""  # Used if auth_type is "basic"
