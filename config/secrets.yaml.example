# Grow Tent Automation - Secrets Configuration Example
# IMPORTANT: Copy this file to secrets.yaml and fill in your values
# Never commit secrets.yaml to git!

# Telegram Bot Configuration
# Create a bot via @BotFather on Telegram to get your token
# Get your chat ID by messaging @userinfobot
telegram:
  bot_token: "YOUR_BOT_TOKEN_HERE"
  chat_id: "YOUR_CHAT_ID_HERE"

# OpenRouter API Configuration (for AI plant health analysis)
# Get your API key from https://openrouter.ai/
# OpenRouter provides access to many AI models including:
# - anthropic/claude-3.5-sonnet (recommended for plant analysis)
# - anthropic/claude-3-opus
# - openai/gpt-4o
# - openai/gpt-4-vision-preview
# - google/gemini-pro-vision
openrouter:
  api_key: ""  # Your OpenRouter API key (starts with sk-)
  model: "anthropic/claude-3.5-sonnet"  # Vision model to use

# External Server Configuration (for data sync/backup)
# Configure this if you want to sync data to your own server
external_server:
  enabled: false
  url: "https://your-server.com/api/grow-tent"
  auth_type: "api_key"  # Options: api_key, bearer, basic, none
  api_key: ""
  bearer_token: ""
  basic_username: ""
  basic_password: ""
